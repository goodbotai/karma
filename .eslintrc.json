{
  "extends": ["google", "recommended/node"],
  "plugins": ["prettier"],
  "env": {
    "node": true
  },
  "rules": {
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-warning-comments": [
      2,
      {
        "terms": ["todo", "fixme"],
        "location": "anywhere"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreTemplateLiterals": true,
        "ignoreTrailingComments": true,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "arrowParens": "always"
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}
